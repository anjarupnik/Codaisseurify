<div class="dropdown show">
  <a class="btn btn-default dropdown-toggle"  id="dropdownMenuLink" data-toggle="dropdown"
    aria-haspopup="true" aria-expanded="false">
    Sort Artists
  </a>

  <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
    <li><a class="dropdown-item" >  <%= link_to "Sort by name A-Z", artists_path(sort: "name_asc") %></a></li>
    <li><a class="dropdown-item" >  <%= link_to "Sort by name Z-A", artists_path(sort: "name_desc") %></a></li>
    <li><a class="dropdown-item" >  <%= link_to "Sort by newest", artists_path(sort: "date_asc") %></a></li>
    <li><a class="dropdown-item" >  <%= link_to "Sort by oldest", artists_path(sort: "date_desc") %></a></li>
  </ul>
</div>

<section class="gallery">
  <% @artists.each do |artist| %>
     <article class="card">
        <div class="img">
          <%= image_tag artist.photo.image.thumbnail %>
        </div>
      <h2 style = "text-decoration: none; padding-left: 20px; "><%= link_to artist.name, artist %></h2>
      </article>
   <% end %>
</section>


<div style="height: 30px;"> </div>
